#include <iostream>
using namespace std;

int main() {
    cout << '\t' << "Largest of three numbers" << endl << endl;
    int x, y, z;
    cout << "Enter the three numbers: ";
    cin >> x >> y >> z;

    int largest;
    if (x >= y && x >= z) {
        largest = x;
    } 
    else if (y >= x && y >= z) {
        largest = y;
    } 
    else {
        largest = z;
    }

    cout << "Largest = " << largest;
    return 0;
}
